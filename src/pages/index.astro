---
import Layout from '../layouts/Layout.astro';
import BootcampEnrollmentForm from '../components/BootcampEnrollmentForm.astro';
import CelestialStars from '../components/CelestialStars.astro';
---

<Layout title="BOOTCAMP ENROLLMENT">
	<CelestialStars />
	<main class="main-container">
		<BootcampEnrollmentForm />
		<a href="/teams" class="view-teams-btn neo-box">VIEW TEAMS</a>
	</main>
</Layout>

<style>
	.main-container {
		min-height: 100vh;
		/* Background handled by CelestialStars */
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.view-teams-btn {
		text-decoration: none;
		color: var(--color-text);
		font-weight: bold;
		font-size: 1.5rem;
		text-transform: uppercase;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		display: inline-block;
		background: var(--color-bg);
	}

	.view-teams-btn:hover {
		transform: translate(-4px, -4px);
		box-shadow: 12px 12px 0px var(--color-accent);
	}
</style>
