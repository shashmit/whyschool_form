---
import Layout from '../layouts/Layout.astro';
import CelestialStars from '../components/CelestialStars.astro';

interface Member {
  id: string;
  name: string;
  role: string;
  roll_number: string;
}

interface Team {
  team: string;
  members: Member[];
}

const response = await fetch('https://aihyunbaawpgfvpydkuz.supabase.co/functions/v1/dynamic-responder');
const teamsData: Team[] = await response.json();
---

<Layout title="TEAMS">
  <CelestialStars />
  <main class="teams-container">
    <h1 class="page-title">PARTICIPATING TEAMS</h1>
    
    <div class="teams-grid">
      {teamsData.map((team) => (
        <div class="team-card neo-box">
          <h2 class="team-name">{team.team}</h2>
          <div class="members-list">
            {team.members.map((member) => (
              <div class="member-item">
                <span class="member-role">{member.role}</span>
                <span class="member-name">{member.name}</span>
                <span class="member-id">#{member.roll_number}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  .teams-container {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .page-title {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 3rem;
    text-transform: uppercase;
    text-shadow: 4px 4px 0px var(--color-accent);
    letter-spacing: -2px;
    position: relative;
    animation: glitch 3s infinite;
  }

  @keyframes glitch {
    0% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
    100% { transform: translate(0); }
  }

  .teams-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .team-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
  }

  /* Staggered animation delay for up to 20 items */
  .team-card:nth-child(1) { animation-delay: 0.1s; }
  .team-card:nth-child(2) { animation-delay: 0.2s; }
  .team-card:nth-child(3) { animation-delay: 0.3s; }
  .team-card:nth-child(4) { animation-delay: 0.4s; }
  .team-card:nth-child(5) { animation-delay: 0.5s; }
  .team-card:nth-child(6) { animation-delay: 0.6s; }
  .team-card:nth-child(7) { animation-delay: 0.7s; }
  .team-card:nth-child(8) { animation-delay: 0.8s; }
  .team-card:nth-child(9) { animation-delay: 0.9s; }
  .team-card:nth-child(10) { animation-delay: 1.0s; }
  .team-card:nth-child(n+11) { animation-delay: 1.1s; }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .team-card:hover {
    transform: translate(-8px, -8px) scale(1.02);
    box-shadow: 16px 16px 0px var(--color-accent);
    z-index: 10;
  }

  .team-name {
    font-size: 1.8rem;
    margin: 0;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-accent);
    text-transform: uppercase;
    letter-spacing: -1px;
    transition: color 0.3s ease;
  }

  .team-card:hover .team-name {
    color: var(--color-accent);
    text-shadow: 2px 2px 0px var(--color-bg);
    background: var(--color-text); /* Invert effect */
    color: var(--color-bg);
    padding-left: 0.5rem;
  }

  .members-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .member-item {
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    border: 1px solid var(--color-accent);
    background: rgba(255, 255, 255, 0.05);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .team-card:hover .member-item {
    transform: translateX(4px);
    background: rgba(255, 255, 255, 0.1);
  }

  .member-item:hover {
    transform: translateX(8px) !important;
    background: var(--color-accent);
    color: var(--color-bg);
  }

  .member-role {
    font-size: 0.8rem;
    opacity: 0.8;
    text-transform: uppercase;
    margin-bottom: 0.2rem;
  }

  .member-name {
    font-size: 1.1rem;
    font-weight: bold;
  }

  .member-id {
    font-size: 0.8rem;
    opacity: 0.6;
    text-align: right;
    margin-top: 0.2rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .teams-container {
      padding: 1rem;
    }
  }
</style>
